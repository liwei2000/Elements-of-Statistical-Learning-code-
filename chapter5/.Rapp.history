# define several functions#
pointvar <- function(H, coef) {#
	W <- diag(logit(H, coef)*(1-logit(H, coef)))#
	sigma <- ginv(t(H)%*%W%*%H)#
	diag(H%*%sigma%*%t(H))#
}#
logit <- function(H, coef) {#
	exp(H%*%ceof)/(1 + exp(H%*%coef))#
}#
